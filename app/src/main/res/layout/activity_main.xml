<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <EditText
        android:id="@+id/Nota1"
        android:layout_width="416dp"
        android:layout_height="72dp"
        android:layout_marginTop="164dp"
        android:height="?attr/actionBarSize"
        android:background="@color/Blue_Children"
        android:defaultFocusHighlightEnabled="false"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="@string/nota_1"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/Nota2"
        android:layout_width="431dp"
        android:layout_height="63dp"
        android:layout_marginTop="52dp"
        android:background="@color/Blue_Children"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="@string/nota_2"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Nota1"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/Falta"
        android:layout_width="439dp"
        android:layout_height="64dp"
        android:layout_marginTop="60dp"
        android:background="@color/Blue_Children"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="@string/falta"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Nota2"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/button"
        android:layout_width="776dp"
        android:layout_height="160dp"
        android:layout_marginTop="92dp"
        android:background="@color/teal_200"
        android:fontFamily="cursive"
        android:text="@string/verificar"
        android:textColor="#00695C"
        android:textColorHint="@color/teal_200"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Falta" />
</androidx.constraintlayout.widget.ConstraintLayout>